<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <servlet>
    <servlet-name>MemberController</servlet-name>
    <servlet-class>
        net.member.controller.MemberController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MemberController</servlet-name>
    <url-pattern>*.mb</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AdminController</servlet-name>
    <servlet-class>
        net.admin.controller.AdminController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminController</servlet-name>
    <url-pattern>*.ad</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CompanyController</servlet-name>
    <servlet-class>
        net.company.controller.CompanyController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CompanyController</servlet-name>
    <url-pattern>*.cp</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>FinanceController</servlet-name>
    <servlet-class>
        net.finance.controller.FinanceController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FinanceController</servlet-name>
    <url-pattern>*.fn</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CustomerController</servlet-name>
    <servlet-class>
        net.customer.controller.CustomerController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CustomerController</servlet-name>
    <url-pattern>*.cu</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>SettingController</servlet-name>
    <servlet-class>
        net.setting.controller.SettingController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SettingController</servlet-name>
    <url-pattern>*.st</url-pattern>
  </servlet-mapping>
  
  <resource-ref>
    <description>DB Connection</description>
    <res-ref-name>jdbc/mysql</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <welcome-file-list>
    <welcome-file>admin/loginForm.jsp</welcome-file>
  </welcome-file-list>
  
  <filter>
      <filter-name>HangulEncodingFilter</filter-name>
      <filter-class>net.filter.HangulEncodingFilter</filter-class>
      <init-param>
          <param-name>encoding</param-name>
          <param-value>UTF-8</param-value>
      </init-param>      
  </filter>
  <filter-mapping>
      <filter-name>HangulEncodingFilter</filter-name>
      <url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <filter>
      <filter-name>LoginFilter</filter-name>
      <filter-class>net.filter.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
      <filter-name>LoginFilter</filter-name>
      <url-pattern>/index.jsp</url-pattern>
      <url-pattern>*.mb</url-pattern>
      <url-pattern>*.cp</url-pattern>      
      <url-pattern>*.fn</url-pattern>
      <url-pattern>*.cu</url-pattern>
      <url-pattern>*.st</url-pattern>
  </filter-mapping>
  
  <servlet>
    <servlet-name>CompanyFileDownload</servlet-name>
    <servlet-class>net.filedownload.CompanyFileDownload</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CompanyFileDownload</servlet-name>
    <url-pattern>/CompanyFileDownload</url-pattern>
  </servlet-mapping>
  
</web-app>